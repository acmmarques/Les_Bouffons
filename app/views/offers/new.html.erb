<div class = "overall-container">
  <%= simple_form_for @clown, html: {class:"d-contents"} do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="left-container">
        <div class="form-container">
          <%= f.input :name, class:"form-control form-control-lg", type:"text", placeholder:"Clown's name" %>
          <%= f.input :details, class:"form-control", id:"exampleFormControlTextarea1", placeholder:"Tell us something about your clown, you clown" %>
          Features
          <div class="features-container">

            <div id="first-feature">
              <%= f.select :features, collection: Offer::FEATURES %>
            </div>
            <div id="second-feature">
              <%= f.select :features, collection: Offer::FEATURES %>
            </div>
            <div id="third-feature">
              <%= f.select :features, collection: Offer::FEATURES %>
            </div>
          </div>
          <%= f.input :price, class:"form-control", type:"number", placeholder:"Euros per day" %>
        </div>
        <div class="back-to-clowns-container">
          Back to clowns
        </div>
      </div>
      <div class="right-container">
        <div class="upload-profile-container">
          upload profile container
        </div>
        <div class="upload-parties-container">
          upload parties container
        </div>
        <div class="preview-container">
          preview container
          <%= f.button :submit, class:"btn btn-warning button-create" %>
        </div>
      </div>

<% end %>
</div>
